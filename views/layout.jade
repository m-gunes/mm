    nav.navbar.navbar-default
      .container
        .navbar-header
          a(href="#").navbar-brand Eren Yatçılık

    .container
      div
        ul(role="tablist").nav.nav-pills.nav-justified
          li(role="presentation").active
            a(href="#calendarYatch", aria-controls="profile", role="tab", data-toggle="tab") Takvim

          li(role="presentation")
            a(href="#register", aria-controls="register", role="tab", data-toggle="tab") Kayıt

        .tab-content
          div(role="tabpanel").tab-pane.active#calendarYatch
            .page-header
              .pull-right.form-inline
                .btn-group
                  button(data-calendar-nav="prev").btn.btn-primary <<
                  button(data-calendar-nav="today").btn Today
                  button(data-calendar-nav="next").btn.btn-primary >>
                .btn-group
                    button(data-calendar-view="year").btn.btn-warning Year
                    button(data-calendar-view="month").btn.btn-warning.active Month
                    button(data-calendar-view="week").btn.btn-warning Week
                    button(data-calendar-view="day").btn.btn-warning Day
              h3
            #calendar
          div(role="tabpanel").tab-pane#register
            form(method="post", action="kaydet", role="form", data-toggle="validator").form-horizontal
              .form-group
                label.col-sm-2.control-label Tekne
                .col-sm-10
                  select(name="bootType", required data-error="Tekne seçmediniz!").form-control
                    option(value="") Seçiniz
                    option(value="1",selected="selected") Eren A
                    option(value="2") Eren B
                  div.help-block.with-errors
              .form-group
                label.col-sm-2.control-label Başlık
                .col-sm-10
                  input(name="eventSubject", required data-error="Etkinliğe ait bir başlık girmediniz!", value="Düğün Töreni").form-control.title-event
                  div.help-block.with-errors
              .form-group
                label(for="inputEmail3").col-sm-2.control-label Tarih
                .col-sm-10
                  input(data-provide="datepicker", name="startDate", required, type="date", data-error="Etkinliğin başlangiç tarihini giriniz!", value="2016-08-04").form-control
                  div.help-block.with-errors
              .form-group
                label(for="inputEmail3").col-sm-2.control-label Saat
                .col-sm-10
                  input(placeholder="00:00", name="startTime", required, type="number", data-error="Etkinliğin başlangıç saatini giriniz!", value="10").form-control
                  div.help-block.with-errors
              .form-group
                label(for="inputEmail3").col-sm-2.control-label Kişi Sayısı
                .col-sm-10
                  input(name="guestCount", required, type="number", data-error="Etkinliği katılacak kişi sayısını giriniz!", value="150").form-control
                  div.help-block.with-errors
              .form-group
                label(for="inputEmail3").col-sm-2.control-label Başlangıç - Bitiş Yeri
                .col-sm-10
                  input(style="margin-bottom:3px", name="startLocation", required, data-error="Başlangıç yerini giriniz!", value="KARAKÖY").form-control 
                  input(name="endLocation", required, data-error="Bitiş yerini giriniz!", value="KADIKÖY").form-control 
                  div.help-block.with-errors
              .form-group
                label(for="inputEmail3").col-sm-2.control-label Ödeme
                .col-sm-10
                  input(style="width:90%; display:inline-block; margin-right:3px;", name="payment", required, type="number", data-error="Ödeme miktarını giriniz!", value="1250").form-control
                  label TL
                  div.help-block.with-errors
              .form-group
                  label.col-sm-2.ontrol-label Açıklama
                  div.col-sm-10
                    textarea(rows="5", name="eventDescription", required, data-error="Etkinlik açıklamasını giriniz!").form-control Yemekli düğün töreni
                    div.help-block.with-errors
              .form-group
                div.col-sm-offset-2.col-sm-10
                  .checkbox
                    label
                      input(type="checkbox", name="hasMeal",checked="checked")
                      |Yemekli
                      div.help-block.with-errors
              .form-group
                div.col-sm-offset-2.col-sm-10
                  input(type="submit", value="Tamam", name="saveEvent").btn.btn-success.pull-right.event-send

